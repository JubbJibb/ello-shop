<% content_for :title, "Settings" %>

<section class="page-header">
  <div>
    <h1>Settings</h1>
    <p class="help-text">Manage pricing and storefront defaults.</p>
  </div>
  <div class="page-actions">
    <%= link_to "Back to orders", orders_path, class: "btn btn-ghost" %>
  </div>
</section>

<div class="card">
  <%= form_with model: @setting, url: settings_path, method: :patch do |f| %>
    <div class="form-field">
      <%= f.label :price_per_bag, "Price per bag" %>
      <%= f.number_field :price_per_bag, min: 1, step: 1 %>
      <p class="help-text">Default price used across the storefront.</p>
    </div>
    <%= f.submit "Save changes", class: "btn btn-primary" %>
  <% end %>
</div>
