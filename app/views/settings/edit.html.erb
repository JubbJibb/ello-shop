<% content_for :title, "Settings" %>

<div class="mb-6">
  <%= link_to orders_path, class: "btn btn-ghost btn-sm gap-2" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back to Orders
  <% end %>
</div>

<div class="card bg-base-100 shadow-xl border border-base-300 max-w-2xl">
  <div class="card-body">
    <h1 class="text-3xl font-bold mb-2 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
      Settings
    </h1>
    <p class="text-sm opacity-70 mb-6">Configure your order tracking preferences</p>

    <%= form_with model: @setting, url: settings_path, method: :patch, class: "space-y-6" do |f| %>
      <div class="form-control">
        <%= f.label :price_per_bag, class: "label" do %>
          <span class="label-text font-semibold text-lg">Price per Bag</span>
          <span class="label-text-alt">฿</span>
        <% end %>
        <div class="relative">
          <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-base-content/70 font-semibold">฿</span>
          <%= f.number_field :price_per_bag, 
              class: "input input-bordered input-lg w-full pl-10 focus:input-primary", 
              placeholder: "0.00",
              min: 0,
              step: 0.01 %>
        </div>
        <label class="label">
          <span class="label-text-alt">Set the default price per bag for orders</span>
        </label>
      </div>

      <div class="card-actions justify-end mt-8">
        <%= link_to "Cancel", orders_path, class: "btn btn-ghost" %>
        <%= f.submit "Save Settings", class: "btn btn-primary gap-2 shadow-lg hover:shadow-xl transition-all" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Save Settings
        <% end %>
      </div>
    <% end %>
  </div>
</div>
