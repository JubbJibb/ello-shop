<div id="<%= dom_id order %>" class="card">
  <h3>Order #<%= order.id %></h3>
  <p><strong><%= order.customer_name.presence || "Guest" %></strong></p>
  <p class="help-text"><%= order.customer_address.presence || "No address provided" %></p>
  <p class="help-text">Bags: <%= order.total_bags %></p>
  <p class="help-text">Total: <%= number_to_currency(order.total_cost, unit: "$", precision: 0) %></p>
  <p class="help-text">Status: <%= order.status.presence || "Pending" %></p>
</div>
